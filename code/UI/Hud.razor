@using Sandbox;
@using Sandbox.UI;
@inherits RootPanel;
@attribute [StyleSheet("/UI/Hud.scss")]
@namespace CrazyEights.UI

<root>
    <text class="preview">🃏Crazy Eights - Preview🃏</text>

    <turntimer @ref=TurnTimer></turntimer>
    <crosshair @ref=Crosshair></crosshair>

    <chatbox></chatbox>
    <hints></hints>

    <settings></settings>
</root>

@code
{
    private TurnTimer TurnTimer { get; set; }
    private Crosshair Crosshair { get; set; }

    /// <summary>
    /// Activates turn notification panel.
    /// </summary>
    public void ActivateTurnTimer()
    {
        TurnTimer.Activate();
    }

    /// <summary>
    /// Activates crosshair, fading it in.
    /// </summary>
    public void ActivateCrosshair()
    {
        Crosshair.Activate();
    }

    /// <summary>
    /// Activates Game Over overlay, displaying winner.
    /// </summary>
    public void ActivateGameOverOverlay(Client winner)
    {
        var overlay = AddChild<GameOverOverlay>();
        overlay.Activate(winner);
    }
}