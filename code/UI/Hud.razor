@using Sandbox;
@using Sandbox.UI;
@inherits RootPanel;
@attribute [StyleSheet("/UI/Hud.scss")]
@namespace CrazyEights.UI

<root>
    <turntimer @ref=TurnTimer></turntimer>
    <crosshair @ref=Crosshair></crosshair>
    <emotewheeloverlay @ref=EmoteWheel></emotewheeloverlay>

    <chatbox></chatbox>
    <hints></hints>

    <settings></settings>
    <scoreboard></scoreboard>
</root>

@code
{
    private TurnTimer TurnTimer { get; set; }
    private Crosshair Crosshair { get; set; }
    private EmoteWheelOverlay EmoteWheel { get; set; }

    public void ActivateTurnTimer() => TurnTimer.Activate();
    public void ActivateCrosshair() => Crosshair.Activate();
    public void ActivateEmoteWheelOverlay() => EmoteWheel.Activate();
    public void ActivateGameOverOverlay(IClient winner)
    {
        var overlay = AddChild<GameOverOverlay>();
        overlay.Activate(winner);
    }
}