@using Sandbox;
@using Sandbox.UI;
@inherits Panel;
@attribute [StyleSheet("/UI/Crosshair.scss")]
@namespace CrazyEights.UI

@code
{
    TimeSince hoveredOverInteractable;
    protected override void OnAfterTreeRender(bool firstTime)
    {
        if (!firstTime) return;

        BindClass("active", () => hoveredOverInteractable < .2f);
    }

    public void Activate() => hoveredOverInteractable = 0;
}